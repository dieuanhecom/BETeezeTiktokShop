name: Develop Backend CI/CD

on:
    push:
        branches:
            - develop

jobs:
    checkout-code:
        runs-on: self-hosted
        steps:
            - name: Checkout
              uses: actions/checkout@v3

    docker-deploy:
        runs-on: self-hosted
        needs: checkout-code
        steps:
            - name: Kill the running container with name tiktokshop-folinas-be-develop
              run: |
                  docker stop tiktokshop-folinas-be-develop || true
                  docker rm tiktokshop-folinas-be-develop || true
                  docker rmi tiktokshop-folinas-be-develop || true
            
            - name: Copy the .env file
              run: |
                  cp ~/workspace/secrets/folinas_tiktokshop_develop/.env .env

            - name: Build the Docker image
              run: |
                  docker build -t tiktokshop-folinas-be-develop .

            - name: stop running container running on port 8000
              run: |
                  docker stop $(docker ps | grep ':8000->' | awk '{ print $1 }') || true

            - name: Run Docker container
              run: |
                  docker run --name tiktokshop-folinas-be-develop -p 8000:8000 -d --restart unless-stopped tiktokshop-folinas-be-develop
